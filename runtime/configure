#!/bin/sh

topdir='../..'
common='common'

# kernel-space Gdev or user-space Gdev
target='kernel'
# pscnv or nouveau
backend='pscnv'
# debug on/off
debug=0

# parse the given options.
for option
do
  case "$option" in
  -*=*) optarg=`echo "$option" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case "$option" in
  --target=*)
    target="$optarg" ;;
  --backend=*)
    backend="$optarg" ;;
  --debug)
    debug=1 ;;
  esac
done

if [ $target = 'kernel' ] ; then
cp -f ../kernel/* .
cp -f $topdir/$common/*.h .
elif [ $target = 'user' ] ; then
cp -f ../user/gdev/* .
cp -f ../user/$backend/* .
cp -f $topdir/$common/* .
else
echo "Error: invalid target '$target'"
fi
