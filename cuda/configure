#!/bin/sh

# libucuda or kcuda
target='libucuda'

# parse the given options.
for option
do
  case "$option" in
  -*=*) optarg=`echo "$option" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case "$option" in
  --target=*)
    target="$optarg" ;;
  esac
done

if [ $target = 'libucuda' ] ; then
cp -f ../libucuda/* .
cp -rf ../driver/* .
cp -f ../cudump/* .
cp -rf ../runtime/* .
elif [ $target = 'kcuda' ] ; then
cp -f ../kcuda/* .
cp -rf ../driver/* .
else
echo "Error: invalid target '$target'"
fi
